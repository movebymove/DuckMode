<Window x:Class="DuckMode.App.PsyduckReminderPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Psyduck Reminder" Width="420" Height="220"
        WindowStartupLocation="Manual" ResizeMode="NoResize"
        WindowStyle="None" Topmost="True" AllowsTransparency="True" 
        Background="Transparent" ShowInTaskbar="False" Focusable="False">
    <Grid>
        <!-- Comic bubble (right of duck) -->
        <Border x:Name="Bubble" Background="White" CornerRadius="28,28,30,16"
                BorderBrush="#FFD700" BorderThickness="3" Padding="18"
                Margin="30,14,125,36"  Effect="{DynamicResource DropShadowEffect}">
            <StackPanel>
                <TextBlock x:Name="BubbleText"
                           FontSize="17" FontWeight="SemiBold" Foreground="#875400" TextWrapping="Wrap"
                           TextAlignment="Left" MaxWidth="220"/>
                <TextBlock x:Name="BubbleTime"
                           FontSize="15" Foreground="#C18300" Margin="0,8,0,0"/>
                <Button x:Name="OkButton" Content="Đã Hiểu" Margin="0,16,0,0" Height="33" Width="110" 
                        FontSize="15" FontWeight="Bold" Background="#FFD700" BorderBrush="#FFA500" 
                        Foreground="White" BorderThickness="0" HorizontalAlignment="Left"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
        <!-- Psyduck PNG, anchored bottom right -->
        <Image Source="psyduck.png" Width="120" Height="120" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,0"/>
    </Grid>
</Window>
